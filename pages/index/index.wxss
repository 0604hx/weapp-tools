/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.indexIcon .van-icon--image, .indexDiv .van-icon__image {
    width: 1.4em !important;
    height: 1.4em !important;
}
.van-panel .van-cell__title {
    font-size: 1.1em;
    font-weight: 600;
}
.van-panel .van-cell__label {
    font-weight: 400;
}
.indexDiv .van-grid-item__icon+.van-grid-item__text {
    padding-top: 5px;
}