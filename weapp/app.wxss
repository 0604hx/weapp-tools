/* 滑动Cell组件*/
.van-swipe-cell__left,
.van-swipe-cell__right {
  display: inline-block;
  width: 60px;
  height: 65px;
  font-size: 15px;
  line-height: 65px;
  color: #fff;
  text-align: center;
}

.swipe .van-button {
    width: 60px;
    height: 65px;
}
.switch .van-cell__value.van-cell__value {
    max-height: 24px !important;
}
.switch .van-cell__title.van-cell__title, .switch .van-cell__title .van-cell__label {
    color:#646566 !important;
    font-size: 14px;
}
.mini .van-cell {
    padding: 5px 16px;
}
.thin .van-cell {
    padding: 8px 16px;
}